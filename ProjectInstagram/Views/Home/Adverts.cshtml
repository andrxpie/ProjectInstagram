@model List<Post>;

<table class="table text-light text-center align-middle">
    <thead>
        <tr>
            <th scope="col">ID</th>
            <th scope="col">Likes</th>
            <th scope="col">Comments</th>
            <th scope="col">Post Time</th>
            <th scope="col">Is Advertised</th>
            <th scope="col">Account ID</th>
            <th scope="col">Action</th>
        </tr>
    </thead>
    <tbody class="table-group-divider">
        @foreach (var i in Model)
        {
            <tr>
                <th scope="row">@i.Id</th>
                <td>@i.Likes</td>
                <td>@i.Comments</td>
                <td>@i.PostTime</td>

                @if (@i.IsAdvertised) {
                    <td>Yes</td>
                }
                else {
                    <td>No</td>
                }

                <td>@i.AccountId</td>

                <td>
                    <div class="btn-group" role="group" aria-label="Basic example">
                        <a class="btn btn-dark" asp-controller="Posts" asp-action="Details" asp-route-id="@i.Id">
                            <i class="bi bi-info"></i>
                        </a>
                        <a class="btn btn-danger" asp-controller="Posts" asp-action="Delete" asp-route-id="@i.Id">
                            <i class="bi bi-trash3-fill"></i>
                        </a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>